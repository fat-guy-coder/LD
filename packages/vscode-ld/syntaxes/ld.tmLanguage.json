{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "LD",
  "scopeName": "text.html.ld",
  "patterns": [
    {
      "include": "#template"
    },
    {
      "include": "#script-ts"
    },
    {
      "include": "#script"
    },
    {
      "include": "#style-scss"
    },
    {
      "include": "#style-less"
    },
    {
      "include": "#style"
    }
  ],
  "repository": {
    "template": {
      "begin": "(<)(template)(?:\\s[^>]*)?(>)",
      "beginCaptures": {
        "1": {
          "name": "punctuation.definition.tag.begin.html"
        },
        "2": {
          "name": "entity.name.tag.html"
        },
        "3": {
          "name": "punctuation.definition.tag.end.html"
        }
      },
      "end": "(</)(template)(>)",
      "endCaptures": {
        "1": {
          "name": "punctuation.definition.tag.begin.html"
        },
        "2": {
          "name": "entity.name.tag.html"
        },
        "3": {
          "name": "punctuation.definition.tag.end.html"
        }
      },
      "name": "meta.tag.template.ld",
      "patterns": [
        {
          "match": "</?[a-zA-Z][a-zA-Z0-9-]*(?:\\s[^>]*)?>",
          "name": "meta.tag.other.html"
        },
        {
          "begin": "\\{\\{",
          "end": "\\}\\}",
          "name": "meta.embedded.expression.ld",
          "patterns": [
            {
              "include": "source.tsx"
            }
          ]
        }
      ]
    },

    "script-ts": {
      "begin": "(<)(script)(?:\\s[^>]*)?\\s(lang=\\\"ts\\\"|lang='ts')(?:\\s[^>]*)?(>)",
      "beginCaptures": {
        "1": {
          "name": "punctuation.definition.tag.begin.html"
        },
        "2": {
          "name": "entity.name.tag.html"
        },
        "3": {
          "name": "punctuation.definition.tag.end.html"
        }
      },
      "end": "(</)(script)(>)",
      "endCaptures": {
        "1": {
          "name": "punctuation.definition.tag.begin.html"
        },
        "2": {
          "name": "entity.name.tag.html"
        },
        "3": {
          "name": "punctuation.definition.tag.end.html"
        }
      },
      "name": "meta.tag.script.ld",
      "contentName": "source.ts",
      "patterns": [
        {
          "include": "source.ts"
        }
      ]
    },

    "script": {
      "begin": "(<)(script)(?:\\s[^>]*)?(>)",
      "beginCaptures": {
        "1": {
          "name": "punctuation.definition.tag.begin.html"
        },
        "2": {
          "name": "entity.name.tag.html"
        },
        "3": {
          "name": "punctuation.definition.tag.end.html"
        }
      },
      "end": "(</)(script)(>)",
      "endCaptures": {
        "1": {
          "name": "punctuation.definition.tag.begin.html"
        },
        "2": {
          "name": "entity.name.tag.html"
        },
        "3": {
          "name": "punctuation.definition.tag.end.html"
        }
      },
      "name": "meta.tag.script.ld",
      "contentName": "source.tsx",
      "patterns": [
        {
          "include": "source.tsx"
        }
      ]
    },

    "style-scss": {
      "begin": "(<)(style)(?:\\s[^>]*)?\\s(lang=\\\"scss\\\"|lang='scss')(?:\\s[^>]*)?(>)",
      "beginCaptures": {
        "1": {
          "name": "punctuation.definition.tag.begin.html"
        },
        "2": {
          "name": "entity.name.tag.html"
        },
        "3": {
          "name": "punctuation.definition.tag.end.html"
        }
      },
      "end": "(</)(style)(>)",
      "endCaptures": {
        "1": {
          "name": "punctuation.definition.tag.begin.html"
        },
        "2": {
          "name": "entity.name.tag.html"
        },
        "3": {
          "name": "punctuation.definition.tag.end.html"
        }
      },
      "name": "meta.tag.style.ld",
      "contentName": "source.scss",
      "patterns": [
        {
          "include": "source.scss"
        }
      ]
    },

    "style-less": {
      "begin": "(<)(style)(?:\\s[^>]*)?\\s(lang=\\\"less\\\"|lang='less')(?:\\s[^>]*)?(>)",
      "beginCaptures": {
        "1": {
          "name": "punctuation.definition.tag.begin.html"
        },
        "2": {
          "name": "entity.name.tag.html"
        },
        "3": {
          "name": "punctuation.definition.tag.end.html"
        }
      },
      "end": "(</)(style)(>)",
      "endCaptures": {
        "1": {
          "name": "punctuation.definition.tag.begin.html"
        },
        "2": {
          "name": "entity.name.tag.html"
        },
        "3": {
          "name": "punctuation.definition.tag.end.html"
        }
      },
      "name": "meta.tag.style.ld",
      "contentName": "source.less",
      "patterns": [
        {
          "include": "source.less"
        }
      ]
    },

    "style": {
      "begin": "(<)(style)(?:\\s[^>]*)?(>)",
      "beginCaptures": {
        "1": {
          "name": "punctuation.definition.tag.begin.html"
        },
        "2": {
          "name": "entity.name.tag.html"
        },
        "3": {
          "name": "punctuation.definition.tag.end.html"
        }
      },
      "end": "(</)(style)(>)",
      "endCaptures": {
        "1": {
          "name": "punctuation.definition.tag.begin.html"
        },
        "2": {
          "name": "entity.name.tag.html"
        },
        "3": {
          "name": "punctuation.definition.tag.end.html"
        }
      },
      "name": "meta.tag.style.ld",
      "contentName": "source.css",
      "patterns": [
        {
          "include": "source.css"
        }
      ]
    }
  }
}

{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "LD",
  "patterns": [
    {
      "include": "#template"
    },
    {
      "include": "#script"
    },
    {
      "include": "#style"
    }
  ],
  "repository": {
    "template": {
      "begin": "(<)(template)(?:\\s[^>]*)?(>)",
      "beginCaptures": {
        "1": {
          "name": "punctuation.definition.tag.begin.html"
        },
        "2": {
          "name": "entity.name.tag.template.html"
        },
        "3": {
          "name": "entity.other.attribute-name.html"
        },
        "4": {
          "name": "punctuation.definition.tag.end.html"
        }
      },
      "end": "(</)(template)(>)",
      "applyEndPatternLast": true,
      "endCaptures": {
        "1": {
          "name": "punctuation.definition.tag.begin.html"
        },
        "2": {
          "name": "entity.name.tag.template.html"
        },
        "3": {
          "name": "punctuation.definition.tag.end.html"
        }
      },
      "name": "meta.tag.template.ld",
      "patterns": [
        {
          "include": "#interpolation"
        },
        {
          "match": "<[a-zA-Z][a-zA-Z0-9-]*(?:\\s[^>]*)?>",
          "name": "meta.tag.other.html"
        },
        {
          "match": "</[a-zA-Z][a-zA-Z0-9-]*>",
          "name": "meta.tag.other.html"
        }
      ]
    },
    "script": {
      "begin": "(<)(script)(?:\\s[^>]*)?(>)",
      "beginCaptures": {
        "1": {
          "name": "punctuation.definition.tag.begin.html"
        },
        "2": {
          "name": "entity.name.tag.script.html"
        },
        "3": {
          "name": "entity.other.attribute-name.html"
        },
        "4": {
          "name": "punctuation.definition.tag.end.html"
        }
      },
      "end": "(</)(script)(>)",
      "applyEndPatternLast": true,
      "endCaptures": {
        "1": {
          "name": "punctuation.definition.tag.begin.html"
        },
        "2": {
          "name": "entity.name.tag.script.html"
        },
        "3": {
          "name": "punctuation.definition.tag.end.html"
        }
      },
      "name": "meta.tag.script.ld",
      "contentName": "source.ts",
      "patterns": [
        {
          "include": "#vue3-apis"
        },
        {
          "include": "#react-hooks"
        },
        {
          "include": "#ld-signals"
        },
        {
          "match": "\\b(import|export|const|let|var|function|class|interface|type|enum|namespace|from|as|default)\\b",
          "name": "keyword.control.typescript"
        },
        {
          "match": "\\b(if|else|for|while|do|switch|case|break|continue|return|try|catch|finally|throw|new|this|super|extends|implements|static|public|private|protected|readonly|abstract|async|await|yield)\\b",
          "name": "keyword.control.typescript"
        },
        {
          "match": "\\b(true|false|null|undefined)\\b",
          "name": "constant.language.typescript"
        },
        {
          "match": "\\b(\\d+(\\.\\d+)?)\\b",
          "name": "constant.numeric.typescript"
        },
        {
          "match": "\"(?:[^\"\\\\]|\\\\.)*\"|'(?:[^'\\\\]|\\\\.)*'",
          "name": "string.quoted.typescript"
        },
        {
          "match": "//.*$",
          "name": "comment.line.double-slash.typescript"
        },
        {
          "begin": "/\\*",
          "end": "\\*/",
          "name": "comment.block.typescript"
        }
      ]
    },
    "style": {
      "begin": "(<)(style)(?:\\s[^>]*)?(>)",
      "beginCaptures": {
        "1": {
          "name": "punctuation.definition.tag.begin.html"
        },
        "2": {
          "name": "entity.name.tag.style.html"
        },
        "3": {
          "name": "entity.other.attribute-name.html"
        },
        "4": {
          "name": "punctuation.definition.tag.end.html"
        }
      },
      "end": "(</)(style)(>)",
      "applyEndPatternLast": true,
      "endCaptures": {
        "1": {
          "name": "punctuation.definition.tag.begin.html"
        },
        "2": {
          "name": "entity.name.tag.style.html"
        },
        "3": {
          "name": "punctuation.definition.tag.end.html"
        }
      },
      "name": "meta.tag.style.ld",
      "contentName": "source.css",
      "patterns": [
        {
          "match": "\\.[a-zA-Z][a-zA-Z0-9_-]*|#[a-zA-Z][a-zA-Z0-9_-]*|[a-zA-Z][a-zA-Z0-9_-]*",
          "name": "entity.name.tag.css"
        },
        {
          "begin": "\\{",
          "end": "\\}",
          "name": "meta.rule.css",
          "patterns": [
            {
              "match": "[a-zA-Z-]+(?=\\s*:)",
              "name": "support.type.property-name.css"
            },
            {
              "match": ":",
              "name": "punctuation.separator.key-value.css"
            },
            {
              "match": "[^;\\}]+",
              "name": "support.constant.property-value.css"
            },
            {
              "match": ";",
              "name": "punctuation.terminator.rule.css"
            }
          ]
        }
      ]
    },
    "interpolation": {
      "begin": "\\{\\{",
      "end": "\\}\\}",
      "name": "meta.embedded.expression.ld",
      "applyEndPatternLast": true,
      "patterns": [
        {
          "match": "\\b(ref|reactive|computed|watch|useState|useEffect)\\b",
          "name": "support.function.ld"
        },
        {
          "match": "\\b(\\d+(\\.\\d+)?)\\b",
          "name": "constant.numeric.typescript"
        },
        {
          "match": "\"(?:[^\"\\\\]|\\\\.)*\"|'(?:[^'\\\\]|\\\\.)*'",
          "name": "string.quoted.typescript"
        }
      ]
    },
    "vue3-apis": {
      "patterns": [
        {
          "match": "\\b(ref|reactive|computed|watch|watchEffect|readonly|toRef|toRefs|unref|isRef|onMounted|onUnmounted|onUpdated|onBeforeMount|onBeforeUnmount|onBeforeUpdate|provide|inject)\\b",
          "name": "support.function.vue3.ld"
        }
      ]
    },
    "react-hooks": {
      "patterns": [
        {
          "match": "\\b(useState|useEffect|useMemo|useCallback|useRef|useContext|useReducer|useLayoutEffect|useImperativeHandle|useDebugValue)\\b",
          "name": "support.function.react.ld"
        }
      ]
    },
    "ld-signals": {
      "patterns": [
        {
          "match": "\\b(createSignal|createComputed|createEffect|createReactive|signal|computed|effect)\\b",
          "name": "support.function.ld.ld"
        }
      ]
    }
  },
  "scopeName": "text.html.ld"
}

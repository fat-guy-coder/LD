{
    "name": "ld-language-support",
    "displayName": "LD Language Support",
    "description": "完整的LD文件开发支持：语法高亮、代码格式化、智能提示、错误检测和代码片段",
    "version": "0.2.5",
    "publisher": "ld-framework",
    "repository": {
        "type": "git",
        "url": "https://github.com/fat-guy-coder/LD.git"
    },
    "license": "MIT",
    "icon": "icons/logo.png",
    "engines": {
        "vscode": "^1.80.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "keywords": [
        "ld",
        "vue",
        "react",
        "typescript",
        "syntax highlighting"
    ],
    "main": "./out/extension.js",
    "activationEvents": [
       
    ],
    "contributes": {
        "languages": [
            {
                "id": "ld",
                "aliases": [
                    "LD",
                    "ld"
                ],
                "extensions": [
                    ".ld"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "ld",
                "scopeName": "text.html.ld",
                "path": "./syntaxes/ld.tmLanguage.json"
            }
        ],
        "snippets": [
            {
                "language": "ld",
                "path": "./snippets/ld.code-snippets"
            }
        ]
    },
    "scripts": {
        "compile": "tsup",
        "watch": "tsup --watch",
        "package": "vsce package --no-dependencies",
        "publish": "vsce publish"
    },
    "devDependencies": {
        "@types/node": "^20.0.0",
        "@types/vscode": "^1.80.0",
        "@vscode/vsce": "^3.7.1",
        "typescript": "^5.0.0"
    },
    "dependencies": {
        "@vue/compiler-sfc": "^3.4.21",
        "prettier": "^3.2.4"
    }
}
